---
import Author from "./Author.astro";

const { authors, short = false } = Astro.props;

if (!authors || authors.length === 0) return null;

const maxAuthorsToShow = 8;
const displayedAuthors = authors.slice(0, maxAuthorsToShow);
const hasMore = authors.length > maxAuthorsToShow;
---

{
  short ? (
    <>
      <Author
        author={authors[0]}
        abbreviateFirstName={true}
        className="text-xs font-light text-muted-foreground sm:text-sm"
      />
      <span class="font-light text-muted-foreground sm:text-sm">et al.</span>
    </>
  ) : (
    <div class="flex flex-wrap items-center text-muted-foreground truncate text-xs sm:text-sm">
      {displayedAuthors.map((author, index) => {
        const isHighlighted = author == "Marcel Rosier";
        return (
          <>
            <Author
              author={author}
              abbreviateFirstName={true}
              class="font-light text-muted-foreground"
              highlight={isHighlighted}
            />
            {index < displayedAuthors.length - 1 && <span>,&nbsp;</span>}
          </>
        );
      })}
      {hasMore && (
        <span class="font-light text-muted-foreground">, et al.</span>
      )}
    </div>
  )
}
